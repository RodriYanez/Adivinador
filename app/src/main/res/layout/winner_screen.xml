<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNumeroGanador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="El numero que pensaste es "
        android:textSize="30sp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/winner_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnVolverAJugar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Volver a Jugar"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btnCambiarJuego"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Cambiar juego"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>